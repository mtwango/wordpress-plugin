{
    "name": "mtwango/wordpress-plugin",
    "type": "composer-plugin",
    "description": "Composer Plugin for Wordpress sites",
    "license": "MIT",
    "authors": [
        {
            "name": "Mtwango",
            "email": "mtwango@gmail.com"
        },
        {
            "name": "Druid.fi",
            "email": "info@druid.fi"
        },
        {
            "name": "Pinchuk Igor",
            "email": "i.pinchuk.personal@gmail.com"
        },
        {
            "name": "Panychev Dmitry",
            "email": "thor_work@yahoo.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "Mtwango\\": "src/"
        }
    },
    "extra": {
        "class": "Mtwango\\Wordpress\\Plugin"
    },
    "require": {
        "php": "^7.4 || ^8.0",
        "composer-plugin-api": "^2.3",
        "composer/installers": "^2.2",
        "cweagans/composer-patches": "^1.7"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
        "drupal/coder": "^8.3",
        "phpcompatibility/php-compatibility": "dev-develop",
        "phpmd/phpmd": "^2.13",
        "phpstan/phpstan": "^1.10",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-strict-rules": "^1.5",
        "vimeo/psalm": "^5.13"
    },
    "conflict": {
        "johnpbloch/wordpress-core": "<6.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    }
}
